{
  "v": "4.0",
  "workspace": {
    "name": "swift",
    "defaultEnv": "swift",
    "environments": [
      {
        "name": "swift",
        "recipe": null,
        "machineConfigs": [
          {
            "name": "ws-machine",
            "limits": {
              "ram": 1536
            },
            "source": {
              "type": "dockerfile",
              "location": "https://raw.githubusercontent.com/juan131/bitnami-docker-swift/master/.codenvy.dockerfile"
            },
            "type": "docker",
            "dev": true
          }
        ]
      }
    ],
    "projects": [
      {
        "name": "swift-sample",
        "type": "blank",
        "path": "/swift-sample",
        "source": {
          "type": "git",
          "location": "https://github.com/apple/example-package-dealer.git",
          "parameters": {
            "keepVcs": "true"
          }
        },
        "mixins": [
          "git",
          "pullrequest"
        ],
        "attributes": {
          "local_branch": [ "contrib" ],
          "contribute_to_branch" : [ "master" ]
        },
        "modules": [],
        "problems": []
      }
    ],
    "commands": [
      {
        "name": "build sample project",
        "type": "custom",
        "commandLine": "cd ${current.project.path} && swift build",
        "attributes": {}
      },
      {
        "name": "build and start",
        "type": "custom",
        "commandLine": "cd ${current.project.path} && swift build && ./.build/debug/Dealer",
        "attributes": {}
      }
    ]
  },
  "ide": {
    "onProjectsLoaded": {
      "actions": [
        {
          "properties": {
            "name": "build sample project"
          },
          "id": "runCommand"
        }
      ]
    }
  }
}
